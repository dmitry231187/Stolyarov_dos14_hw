#!/bin/bash

# печать строки/массива в столбик
printArray() {
 echo "$@" | tr ' ' '\n'
}

# получаем массивы расширений и файлов с/без расширений
arrays() {
for i in ${arr_files[@]}
do
 if [[ "$i" =~ .*\.[0-9A-Za-z]+ ]]; then
# собираем массив файлов с расширениями
  arr_FwExt+=($i)
# собираем массив расширений файлов
  arr_ext+=($(sed -r 's/.*\.([0-9A-Za-z]+)/\1/' <<< $i))
 else
# иначе собираем массив файлов без расширения
  arr_FnoExt+=($i)
 fi
done
# делаем массив с расширениями уникальным
arr_ext=($(printArray "${arr_ext[@]}" | sort -u | tr '\n' ' '))
}

printArrFwExt() {
# берём расширение из массива и проверяем каждое из них на совпадение с массивом файлов с расш. и печатаем если да
for m in ${arr_ext[@]}
do
 echo "Files with $m extension:"
 printArray "${arr_FwExt[@]}" | grep ".$m\$"
done
}

main() {
# получаем исходные данные
arr_files=($(ls -A))
# получаем массивы данных
arrays
# печать массивов файлов с расширениями
printArrFwExt
# выводим файлы без расширений
echo "Files with no extension: "
printArray "${arr_FnoExt[@]}"
}

main "$@"
