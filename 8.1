#!/bin/bash

usage() {
 echo "Введенные данные не соответствуют email, url, номеру телефона, паролю"
 echo "Вводите данные правильно!"
 echo "Образец email: ./81 admin@tut.by"
 echo "Образец url: ./81 https://yandex.ru"
 echo "Образец номера телефона: ./81 +375291234567"
 echo "Образец пароля: ./81 Qwerty123"
 exit 1
}

errors() {
# проверяем наличие исходных данных и запрашиваем их если нету.
if [[ -z $* ]]; then
 read -p 'Введите данные: ' string
 if [[ -z $string ]]; then
  usage
 fi
else
 string=$@
fi
}

# проверка на корректность email
email() {
 if [[ "$string" =~ ^[[:alnum:]]+\@[[:alnum:]]+\.[[:alpha:]]+$ ]]; then
  echo "$string - корректный email"
  ((i+=1))
 fi
}

# проверка на корректность url
url() {
 if [[ "$string" =~ ^(https?\:\/\/(www\.)?)?([[:alnum:]]+\.)+[[:alnum:]]+\/?$ ]]; then
  echo "$string - корректный url"
 ((i+=1))
 fi
}

# проверка на корректность номера телефона
telNum() {
 if [[ "$string" =~ ^(\+?375|0|8-?0)-?(17|25|29|33|44)-?[0-9]{3}-?[0-9]{2}-?[0-9]{2}$ ]]; then
  echo "$string - корректный номер телефона"
 ((i+=1))
 fi
}

# проверка на корректность пароля (большая и маленькая буква, цифра, не меньше 8 символов, можно спецсимвол)
isPass() {
if [[ "$string" =~ ^[0-9A-Za-z!@#$\%\^\&\*\(\)\{\[\}\/\.\,\:\;\"\'\<\>]{8,}$ ]]; then
 if [[ $(grep [0-9] <<< $string) && $(grep [a-z] <<< $string) && $(grep [A-Z] <<< $string) ]]; then
  echo "$string - корректный пароль"
  ((i+=1))
 fi
fi
}

main() {
 # счетчик для проверки данных на совпадение (увеличиваем на 1 если совпало email/url/номером телефона/паролем)
 i=0
 # проверка исходных данных
 errors "$@"
 # проверка на email
 email
 # проверка на url
 url
 # проверка на номер телефона
 telNum
 # проверка на соответствие паролю
 isPass
# если счетчик равен 0 то usage
 if [[ $i -eq 0 ]]; then
  usage
 fi
}

main "$@"
