#!/bin/bash
usage() {
 #выводим предупреждение и образец правильного ввода данных
 echo -e "Вводите данные правильно! \nобразец: ./61 this is test sample"
 exit 1
}

errors() {
 # проверяем введены ли данные, если нет - запрашиваем их, если совсем нет - отправляем в образец
if [[ -z $* ]]; then
 read -p "Enter string: " string
 if [[ -z $string ]]; then
  usage
 fi
else
 string=$*
fi
}

main() {
# проверяем на ошибки
errors "$@"
# выводим результат убрав пробелы
echo "$string" | sed 's/ //g'
}

main "$@"
